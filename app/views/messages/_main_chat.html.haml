.chat-main
  .group-info
    .left-box 
      %h.group-info__left-box__current-group techcamp
      %ul.group-info__left-box__member-list Member : sumi
    .right-box Edit

  .messages-list
    .message
      .upper-info
        %p.messages-list__message__upper-info__talker sumi
        %p.messages-list__message__upper-info__date 2020/03/23(Mon) 17:45
      .text
        %p.messages-list__message__upper-info__text おはよう
    .message
      .second-info
        %p.messages-list__message__second-info__talker2 sumi
        %p.messages-list__message__second-info__date2 2020/03/23(Mon) 19:08
      .text2
        %p.messages-list__message__second-info__text2 おそよー

  .message-form
    = form_for [@group, @message] do |f|
      .input-box  
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn' 